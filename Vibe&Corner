<script>
const products = [
{
id:1,
name:"Minimal Tişört",
price:150,
img:"https://images.unsplash.com/photo-1521572163474-6864f9cf17ab"
},
{
id:2,
name:"Premium Hoodie",
price:320,
img:"https://images.unsplash.com/photo-1541099649105-f69ad21f3246"
},
{
id:3,
name:"Şapka",
price:110,
img:"https://images.unsplash.com/photo-1520975922284-9d1b1c21b1f6"
}
];

let cart = [];

function renderProducts(){
let html="";
products.forEach(p=>{
html += `
<div class="card">
<img src="${p.img}">
<div class="card-body">
<h3>${p.name}</h3>
<p class="price">${p.price} TL</p>
<button class="add" onclick="addToCart(${p.id})">
Sepete Ekle
</button>
</div>
</div>`;
});
document.getElementById("products").innerHTML = html;
}
renderProducts();

function addToCart(id){
let product = products.find(p=>p.id===id);
cart.push(product);
updateCart();
}

function updateCart(){
document.getElementById("count").innerText = cart.length;
let items="";
let total=0;

cart.forEach(item=>{
items += `<p>${item.name} - ${item.price} TL</p>`;
total += item.price;
});

document.getElementById("cartItems").innerHTML = items;
document.getElementById("total").innerText = total;
}

function toggleCart(){
document.getElementById("cart").classList.toggle("active");
}
</script>

